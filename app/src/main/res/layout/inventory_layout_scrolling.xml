<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@drawable/universebackground"
                android:focusableInTouchMode="true"
>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Player Inventory"
                  android:textColor="#FFFFFF"
                  android:textSize="34dp"
                  android:layout_marginTop="34dp"
                  android:layout_centerHorizontal="true"
                  android:id="@+id/gridTopText"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="120dp">

            <!--PLANET 1-->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp"
            >


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="match_parent">


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PLANET 1: "
                            android:id="@+id/planet1ID"
                    />

                    <ImageView
                            android:src="@drawable/planet1"
                            android:layout_width="wrap_content"
                            android:layout_below="@+id/planet1ID"
                            android:layout_height="180dp"
                            android:id="@+id/planet1img"
                    />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/planet1img"
                            android:layout_below="@+id/planet1ID"
                            android:text="LOCATION: (0, 0) "
                            android:id="@+id/planet1Location"
                    />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/planet1img"
                            android:layout_below="@+id/planet1Location"
                            android:text="RES:  "
                            android:id="@+id/planet1Resource"
                    />
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/planet1img"
                            android:layout_below="@+id/planet1Resource"
                            android:text="TECH LEV:  "
                            android:id="@+id/planet1Tech"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/planet1img"
                    />

                </RelativeLayout>
            ></android.support.v7.widget.CardView>

            <!-- EMPTY HOLDER -->
            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="8dp"
                    app:cardCornerRadius="8dp"
            >


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="match_parent">


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                    />

                </RelativeLayout>
                ></android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>