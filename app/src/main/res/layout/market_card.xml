<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6dp"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    app:cardElevation="8dp"
                                    app:cardCornerRadius="8dp"
                                    android:id="@+id/market_card"
>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/universebackground">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/productName"
                  android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/white"
                  android:fontFamily="@font/soham"

        />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/productPrice"
                  android:layout_below="@+id/productName"
                  android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/white"
                  android:fontFamily="@font/soham"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/productNumber"
                android:layout_below="@+id/productPrice"
                android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/white"
                android:fontFamily="@font/soham"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/transactionButton"
                android:layout_below="@+id/productNumber"
                android:textSize="24sp" android:textStyle="bold"
                android:fontFamily="@font/soham"
        />


    </RelativeLayout>
</android.support.v7.widget.CardView>