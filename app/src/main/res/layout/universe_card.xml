<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="6dp"
                                    android:layout_marginBottom="16dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    app:cardElevation="8dp"
                                    app:cardCornerRadius="8dp"
                                    android:id="@+id/uni_card"
>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/universebackground"
                    >


        <ImageView
                android:layout_width="88dp"
                android:adjustViewBounds="true"
                android:layout_height="100dp"
                android:id="@+id/planetIMG"
                android:layout_marginTop="0dp" android:layout_marginStart="0dp"
                android:layout_alignParentTop="true"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/planetIMG"
                android:fontFamily="@font/soham"
                android:id="@+id/planetName"
                android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/white"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/planetName"
                android:fontFamily="@font/soham"
                android:textSize="21sp" android:textStyle="bold"
                android:id="@+id/planetLocation"
                android:textColor="@android:color/white"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/planetLocation"
                android:fontFamily="@font/soham"
                android:textSize="21sp" android:textStyle="bold"
                android:id="@+id/planetResource"
                android:textColor="@android:color/white"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/planetResource"
                android:fontFamily="@font/soham"
                android:textSize="21sp" android:textStyle="bold"
                android:id="@+id/planetTech"
                android:textColor="@android:color/white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/planetIMG"
                android:textColor="@android:color/white"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>