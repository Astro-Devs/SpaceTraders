<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MainActivity"
        android:background="@drawable/loginscreen">

    <TextView
            android:text="placeholder"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/points4"
            app:layout_constraintEnd_toStartOf="@+id/plus4" android:layout_marginEnd="8dp"
            android:layout_marginBottom="56dp" app:layout_constraintBottom_toTopOf="@+id/doneButton"
            app:layout_constraintStart_toEndOf="@+id/minus4" android:layout_marginStart="8dp"/>
    <TextView
            android:text="placeholder"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/points3"
            app:layout_constraintEnd_toStartOf="@+id/plus3" android:layout_marginEnd="8dp"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toTopOf="@+id/points4"
            app:layout_constraintStart_toEndOf="@+id/minus3" android:layout_marginStart="8dp"/>
    <Button
            android:text="-"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:id="@+id/minus2"
            app:layout_constraintEnd_toStartOf="@+id/plus2"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/minus3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.653"/>
    <Button
            android:text="-"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:id="@+id/minus3"
            app:layout_constraintEnd_toStartOf="@+id/plus3"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/minus4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.653"/>
    <Button
            android:text="-"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:id="@+id/minus4"
            app:layout_constraintEnd_toStartOf="@+id/plus4"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toTopOf="@+id/doneButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.653"/>
    <Button
            android:text="+"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:id="@+id/plus4" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/doneButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/engineer"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.837"/>
    <Button
            android:text="+"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:id="@+id/plus3" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/plus4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/trader"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.837"/>
    <TextView
            android:text="Pilot"
            android:textColor="#FFFFFF"
            android:layout_width="77dp"
            android:layout_height="25dp"
            android:id="@+id/pilot"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.85" app:layout_constraintBottom_toTopOf="@+id/fighter"/>
    <TextView
            android:text="Trader"
            android:textColor="#FFFFFF"
            android:layout_width="77dp"
            android:layout_height="25dp"
            android:id="@+id/trader" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/engineer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="Player Name"
            android:textColor="#FFFFFF"
            android:layout_width="112dp"
            android:layout_height="36dp" android:id="@+id/playerName"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="Difficulty"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/difficulty" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/playerName"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playerName"/>
    <Spinner
            android:layout_width="280dp"
            android:layout_height="41dp"
            android:textColor="#FFFFFF"
            android:id="@+id/difficultySpinner" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/difficulty" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:spinnerMode="dropdown"
            app:layout_constraintHorizontal_bias="0.165"/>
    <Button
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doneButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/difficultySpinner" app:layout_constraintVertical_bias="0.953"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:text="Fighter"
            android:textColor="#FFFFFF"
            android:layout_width="77dp"
            android:layout_height="25dp"
            android:id="@+id/fighter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/trader"/>
    <TextView
            android:text="Engineer"
            android:textColor="#FFFFFF"
            android:layout_width="77dp"
            android:layout_height="25dp"
            android:id="@+id/engineer"
            app:layout_constraintBottom_toTopOf="@+id/doneButton" android:layout_marginBottom="64dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"
    />
    <Button
            android:text="+"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:id="@+id/plus"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/pilot" app:layout_constraintHorizontal_bias="0.879"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/plus2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.892"/>
    <Button
            android:text="-"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:id="@+id/minus"
            app:layout_constraintEnd_toStartOf="@+id/plus"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/minus2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.892"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.653"/>
    <Button
            android:text="+"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:id="@+id/plus2" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/plus3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/fighter"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.879"/>
    <TextView
            android:text="placeholder"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/points" app:layout_constraintStart_toEndOf="@+id/minus" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/plus" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/points2"
            app:layout_constraintVertical_bias="0.816"/>
    <TextView
            android:text="placeholder"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/points2"
            app:layout_constraintStart_toEndOf="@+id/minus2" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/plus2" android:layout_marginEnd="8dp"
            android:layout_marginBottom="68dp" app:layout_constraintBottom_toTopOf="@+id/points3"
    />
</android.support.constraint.ConstraintLayout>